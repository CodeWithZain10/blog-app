<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Header Include -->
  <%- include('./partials/header') %>

  <!-- Main Container -->
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap -mx-4">
      
      <!-- Example Blog Card -->
      <% blogs.forEach((blog)=> { %>

        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
          <div class="bg-white shadow rounded-lg overflow-hidden">
            <img class="h-48 w-full object-cover" src="data:image/jpeg;base64,<%= blog.image.toString('base64') %>" alt="Blog picture">
            <div class="p-4">
              <h2 class="text-xl font-bold text-gray-900"><%= blog.title %></h2>
              <p class="mt-2 text-gray-600"><%= blog.content.substring(0, 20) %>...</p>
              <p class="text-sm text-gray-500">by <%= blog.user.username %></p>
              <button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-lg"><a href="/blog/read/<%= blog._id %>" >Read More</a></button>
            </div>
          </div>
        </div>
        <% }) %>
     

      <!-- Add more blog entries as needed -->
      
    </div>
  </div>
  
</body>
</html>
